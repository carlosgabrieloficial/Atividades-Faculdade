
def cadastrar_notas():
    notas = [] ## onde nossas notas ficarão armazenadas
    while True:
        try:
            nota = float(input("Insira a nota do aluno (ou -1 para parar): ")) ## onde a notas são inseridas
            if nota == -1:
                break
            if nota < 0 or nota > 10: ## a nota não pode ser maior que o valor 10, então irar validar se a nota é igual ou menor que 10
                print("Nota inválida. Por favor, insira uma nota entre 0 e 10.")
            else:
                notas.append(nota) # a nota vai ser adicionada na lista [notas]
        except ValueError:
            print("Valor inválido. Por favor, insira um número.")
    return notas

def calcular_media(notas):##somando os valores das notas e dividindo pelo numero de notas dentro da lista
    if len(notas) == 0:
        return 0
    return sum(notas) / len(notas)

def determinar_situacao(media): ## se o aluno tiver uma media maior ou igual a 7 ele serar aprovado
    if media >= 7:
        return "Aprovado"
    else:                       ## se o aluno tiver uma media menor 7 ele serar reprovado
        return "Reprovado"

def exibir_relatorio(notas, media, situacao): ## mostrando todas notas / medias e situações se o aluno foi aprovado ou não
    print("Relatório Final:")
    print(f"Notas: {notas}")
    print(f"Média: {media:.2f}")
    print(f"Situação: {situacao}")

def main():
    print("Sistema de Gestão de Notas")
    notas = cadastrar_notas()
    if notas:
        media = calcular_media(notas)
        situacao = determinar_situacao(media)
        exibir_relatorio(notas, media, situacao)
    else:
        print("Nenhuma nota foi inserida.") ## caso o aluno não informe nenhuma nota

if __name__ == "__main__":
    main()